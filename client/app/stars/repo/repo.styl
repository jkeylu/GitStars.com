.stars .repo
  position absolute
  top 50px
  bottom 0
  left 200px
  width 400px
  overflow-y auto

  .list-group-item:first-child
    border-top-left-radius 0
    border-top-right-radius 0
  .list-group-item:last-child
    border-bottom-left-radius 0
    border-bottom-right-radius 0

  .list-group-item:focus,
  .list-group-item:hover
    color #555
    text-decoration none
    background-color #f5f5f5
  .list-group-item.active,
  .list-group-item.active:focus,
  .lsit-group-item.active:hover
    color #fff
    background-color #337ab7
    border-color #337ab7
    a
      color #fff

  .list-group-item
    cursor pointer
    border-left-width 0
    border-right-width 0

  .list-group-item-heading
    margin-bottom 10px
    word-break break-all

  .tags
    list-style-type none
    margin 6px 0 4px 0
    padding 0
    .tag
      color #333
      display inline-block
      background #fff
      padding 3px 6px
      margin 4px 4px 0 0
      cursor pointer
      line-height 1
      font-size 10px
      border 1px solid #ccc
      border-radius 2px

  .stats
    margin-top 10px
    font-size 14px
    .stat
      display inline-block
      width 55px
      padding 1px 0
      margin 0 2px
      .fa
        margin-right 2px
    .stars
      margin-left 0
    .link
      float right
      width 150px
      text-align right
      .github
        padding-left 5px
